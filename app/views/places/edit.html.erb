<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Place</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
    <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'WARNING, are you sure you wish to purge this from existence?'},class: 'btn btn-danger'%>
  <% end %>
</div>